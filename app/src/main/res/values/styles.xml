<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 全局主题颜色，在 AndroidManifest.xml 中引用 -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#171717</item>
        <item name="colorAccent">#373636</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- 公共头部上的右边按钮 -->
    <style name="btn_in_header_right">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn_in_header_right</item>
    </style>

    <!-- ShapeableImageView 圆 -->
    <style name="imageCircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- ShapeableImageView 圆角 -->
    <style name="imageRadius10dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- 长条按钮 -->
    <style name="longButton">
        <item name="android:layout_height">48dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">48dp</item>
        <item name="android:background">@drawable/btn_long_circular</item>
    </style>

    <!--    DialogFragment 样式-->
    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/brand_primary</item> <!-- 设置 OK 按钮颜色 -->
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#757474</item> <!-- 设置 Cancel 按钮颜色 -->
    </style>


</resources>
